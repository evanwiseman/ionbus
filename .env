# ========================
# MQTT (Local Broker container)
# ========================
MQTT_PORT=1883
MQTT_WS_PORT=9001
MQTT_URL=mqtt://mqtt-broker:${MQTT_PORT}
MQTT_QOS=1
MQTT_KEEPALIVE=30
MQTT_CLEAN_SESSION=false

# ========================
# RabbitMQ (container)
# ========================
RABBIT_PORT=5672
RABBIT_MANAGEMENT_PORT=15672
RABBIT_URL=amqp://guest:guest@rabbitmq:${RABBIT_PORT}/

# ========================
# Postgres (container)
# ========================
POSTGRES_USER=ionbus
POSTGRES_PASSWORD=ionbus    # ‚Üê this is the superuser password Docker needs
POSTGRES_PORT=5432
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/ionbus?sslmode=disable


# ========================
# Server / Routine Settings
# ========================
SERVER_PORT=8080
SYNC_THRESHOLD_MS=50
ROUTINE_BUFFER_MS=10

# ========================
# Logging
# ========================
LOG_LEVEL=debug
